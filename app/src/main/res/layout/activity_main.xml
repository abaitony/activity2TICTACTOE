<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/txtViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TIC-TAC-TOE"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="50sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/btn4"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/btn7"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="20dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/defaultColor"
            android:padding="0dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="50sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:text="Hide Settings"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLayoutPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LLayoutRbP1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Player 1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="SYMBOL: " />

            <EditText
                android:id="@+id/editTxtP1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="text|textCapCharacters"
                android:maxLength="1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textIsSelectable="false"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLayoutBP1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnColor1P1"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/btnColor2P1"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/btnColor3P1"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@color/colorPrimaryDark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLayoutRbP2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Player 2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYMBOL: " />

            <EditText
                android:id="@+id/editTxtP2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="text|textCapCharacters"
                android:maxLength="1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLayoutBP2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnColor1P2"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/btnColor2P2"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/btnColor3P2"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>